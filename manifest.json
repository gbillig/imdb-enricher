{
	"manifest_version": 2,
	"name": "IMDb Enricher",
	"description": "Adds the IMDb rating of each title to the corresponding row in the filmography section of each person.",
	"version": "0.4",
	"permissions": ["storage", "*://imdb.com/*", "https://www.omdbapi.com/*", "http://unogs.com/*"],
	"icons": {
		"32": "icons/icon_32.png", 
		"48": "icons/icon_48.png", 
		"128": "icons/icon_128.png", 
		"512": "icons/icon_512.png"
	},
	"applications": {
	  "gecko": {
		"id": "gleb.billig@gmail.com",
		"strict_min_version": "57.0"
	  }
	},
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [{
		"js": ["jquery-2.1.4.min.js", "filmography.js"],
		"run_at": "document_end",
		"matches": ["https://www.imdb.com/name/*"]
	}]
}

